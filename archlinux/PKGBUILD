# Maintainer: justforlxz <justforlxz@gmail.com>
pkgname=deepin-sound-theme-git
pkgver=15.10.6.r3.g0c81150
pkgrel=1
pkgdesc="Deepin sound theme"
arch=('any')
url="https://github.com/linuxdeepin/deepin-sound-theme"
makedepends=('git')
license=('GPL3')
groups=('deepin-git')
conflicts=('deepin-artwork' 'deepin-sound-theme')
source=("$pkgname-$pkgver::source.tar.gz")
sha512sums=('SKIP')
pkgver() {
    cd $pkgname-$pkgver
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd $pkgname-$pkgver
}

build() {
  cd $pkgname-$pkgver
  make
}

package() {
  cd $pkgname-$pkgver
  make PREFIX=/usr DESTDIR="$pkgdir" install
}
